{
  "name": "biotope-boilerplate-project",
  "title": "Biotope - The Frontend Ecosystem Framework",
  "version": "7.0.0-alpha16",
  "description": "Modern HTML5 UI Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-boilerplate-project.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "biotope-build compile -a config",
    "build:dev": "biotope-build compile -a config --environment dev",
    "build:prod": "biotope-build compile -a config --environment prod",
    "lint": "npm run lint:config && npm run lint:code && npm run lint:style",
    "lint:code": "biotope-quality-gate lint -c biotope-quality-gate.ts -t -j -x -p src,typings",
    "lint:config": "biotope-quality-gate lint -c biotope-quality-gate.ts -t -p ./*.ts,config",
    "lint:style": "biotope-quality-gate lint -c biotope-quality-gate.ts -s -p src",
    "serve": "biotope-build serve",
    "serve:open": "biotope-build serve --open",
    "serve:prod": "biotope-build serve --production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run watch",
    "watch": "biotope-build compile --watch --open"
  },
  "dependencies": {
    "@babel/preset-react": "~7.0",
    "@biotope/build": "github:biotope/biotope-build#next",
    "@types/react": "~16.8",
    "@types/react-dom": "~16.8",
    "browser-polyfills": "~1.5",
    "favicons-webpack-plugin": "~0.0",
    "glob": "~7.1",
    "html-webpack-plugin": "~3.2",
    "load-entry": "~1.1",
    "manifest-json-webpack-plugin": "~1.0",
    "react": "~16.8",
    "react-dom": "~16.8"
  },
  "devDependencies": {
    "@biotope/quality-gate": "^1.0.0-beta.2",
    "eslint-config-airbnb": "~17.1",
    "eslint-plugin-jsx-a11y": "~6.2",
    "eslint-plugin-react": "~7.12"
  }
}
